<h1 class="text-centermt-4">Create a new category </h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>
         <br />
        
        <button class="btn-lg form-group row justify-content-center bg-primary align-item-center">
          <%= f.submit class: "btn  btn-sm " %>
        </button>
      <% end %>
    </div>
    
  </div>
</div>